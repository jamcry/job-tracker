<h1>Jobs</h1>

<table class="table table-striped table-sm col-md-6">
  <thead class="thead-dark">
    <% if @jobs.any? %>
      <tr>
        <th>Mins</th>
        <th>Job</th>
        <th colspan=3>Actions</th>
      </tr>
    <% else %>
      <p>No jobs. Create one from below.</p>
      <%= render 'form' , job: Job.new %>
    <% end %>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><span class="badge badge-pill badge-success"><%= job.duration %></span></td>
        <td><%= job.description %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>
<%= link_to 'New Job', new_job_path, class: "btn btn-primary" if @jobs.any? %>
